// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent": {
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {
          "browsermcp": {
            "path": "bunx",
            "args": ["-y", "@browsermcp/mcp@latest"],
            "tools": {
              "browser_navigate": true,
              "browser_wait": true,
              "browser_go_back": true,
              "browser_go_forward": true,
              "browser_press_key": true,
              "browser_snapshot": true,
              "browser_click": true,
              "browser_drag": true,
              "browser_hover": true,
              "browser_type": true,
              "browser_select_option": true,
              "browser_screenshot": true,
              "browser_get_console_logs": true
            }
          }
        }
      }
    },
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet"
    },
    "enable_experimental_live_diffs": true,
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "theme": "Github Dark Dimmed",
  "tab_size": 2,
  "auto_install_extensions": {
    "docker-compose": true,
    "dockerfile": true,
    "emmet": true,
    "github-theme": true,
    "harper": true,
    "html": true,
    "just": true,
    "toml": true
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true
  },
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "cursor_blink": true,
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "Rust": {
      "tab_size": 4
    }
  },
  "telemetry": {
    "enabled": false,
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "dock": "bottom",
    "env": {
      "GIT_EDITOR": "zed --wait"
    },
    "font_size": 14,
    "shell": {
      "program": "fish"
    }
  }
}
