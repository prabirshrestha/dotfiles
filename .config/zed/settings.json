// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent": {
    "always_allow_tool_actions": true,
    "profiles": {
      "write": {
        "context_servers": {
          "browser-mcp": {
            "tools": {
              "getConsoleLogs": true
            }
          }
        },
        "name": "Write",
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true
      }
    },
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "theme": "Github Dark Dimmed",
  "tab_size": 2,
  "auto_install_extensions": {
    "docker-compose": true,
    "dockerfile": true,
    "emmet": true,
    "github-theme": true,
    "harper": true,
    "html": true,
    "just": true,
    "toml": true
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always"
  },
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "cursor_blink": true,
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "Rust": {
      "tab_size": 4
    }
  },
  "telemetry": {
    "enabled": false,
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "dock": "bottom",
    "env": {
      "GIT_EDITOR": "zed --wait"
    },
    "font_size": 14,
    "shell": {
      "program": "fish"
    }
  },
  "context_servers": {
    "git": {
      "source": "custom",
      "command": "uvx",
      "args": ["mcp-server-git"]
    },
    "browser-mcp": {
      "source": "custom",
      "command": "npx",
      "args": ["-y", "@browsermcp/mcp@0.1.2"]
    }
  }
}
